{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000"
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "runtimeArgs": [
                "--inspect"
            ],
            "args": [
                "dev"
            ],
            "filterOutput": "(?i)ready on",
            "sourceMaps": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "runtimeArgs": [
                "--inspect"
            ],
            "args": [
                "dev"
            ],
            "filterOutput": "(?i)ready on",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "serverReadyAction": {
                "action": "debugWithChrome",
                "pattern": "ready on (https?://localhost:\\d+)",
                "uriFormat": "%s"
            }
        }
    ]
}